{% form 'contact' %}
    {{ form.errors | default_errors }}

    <div>
        <label for="first-name">First Name</label>
        <input type="text" name="contact[first_name]" id="first-name">
    </div>

    <div>
        <label for="last-name">Last Name</label>
        <input type="text" name="contact[last_name]" id="last-name">
    </div>

    <div>
        <label for="email">Email</label>
        <input type="email" name="contact[email]" id="email">
    </div>

    <div>
        <label for="phone">Phone</label>
        <input type="tel" name="contact[phone]" id="phone">
    </div>
    
    <div>
        <label for="text">Enter here your contact info</label>
        <input type="textarea" name="contact[body]" id="text">
    </div>

    <button type="submit" value="Create">Click here to submit</button>
{% endform %}